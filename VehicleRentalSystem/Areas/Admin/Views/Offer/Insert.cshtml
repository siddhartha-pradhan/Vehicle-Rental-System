@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;

@model OfferViewModel

@{
    ViewData["Title"] = "Offer";
    var title = "Add a new offer to our vehicles";
}

<div class="container-fluid" style=" margin-top:10vh;">
    <form method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <h3 class="text-dark">@title</h3>
            </div>
            <div class="col-8 pt-4" >
                <div class="form-group row">
                    <input asp-for="Offer.Id" class="form-control" type="hidden" required/>
                    <div class="col-4">
                        <label asp-for="Offer.Name"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Offer.Name" class="form-control" />
                        <span asp-validation-for="Offer.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Offer.Discount"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Offer.Discount" class="form-control"></input>
                        <span asp-validation-for="Offer.Discount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Offer.Description"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <textarea asp-for="Offer.Description" class="form-control"></textarea>
                        <span asp-validation-for="Offer.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Offer.StartDate"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Offer.StartDate" class="form-control"></input>
                        <span asp-validation-for="Offer.StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Offer.EndDate"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Offer.EndDate" class="form-control"></input>
                        <span asp-validation-for="Offer.EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Vehicles"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <select asp-for="VehicleList" asp-items="@Model.Vehicles" class="form-control multiple">
                            <option disabled selected style="background-color:#f3edfe; color:#7d43a3;">Select a vehicle to offer</option>
                        </select>
                    </div>
                </div>
                <input asp-for="Offer.CreatedDate" class="form-control" type="hidden" />
                <input asp-for="Offer.LastModifiedDate" class="form-control" type="hidden" />
                <input asp-for="Offer.DeletedDate" class="form-control" type="hidden" />
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-green form-control">Create</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-danger form-control">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>


</style>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />

    <script>
        tinymce.init({
            selector: 'textarea',
        });
    </script>
}