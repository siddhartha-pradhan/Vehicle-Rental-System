@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;
@model List<RentalDetailsViewModel>

@{
	ViewData["Title"] = "Requested Rents";
}

<partial name="_Notification" />

<div class="row" style=" margin-top:10vh;">
	<h3 class="mx-5 mb-4">Requested Rents</h3>
	<form method="post">
		@foreach (var item in Model)
		{
			<div class="card mb-5 mx-5">
				<div class="card-body">
					<div class="row">
						<div class="col-4 d-flex ">
							<img src="@item.ImageURL" style="width:350px;height:250px; object-fit:cover; margin:auto" />
						</div>
						<div class="col-8">
							<div class="row">
								<input asp-for="@item.Id" hidden/>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Customer Name:
								</div>
								<div class="col-9">
									@item.UserName
								</div>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Phone Number:
								</div>
								<div class="col-9">
									@item.PhoneNumber
								</div>

							</div>
							@if (item.LicenseURL != null)
							{
									<div class="row mb-1">
										<div class="col-3 fw-bold">
											License Number:
										</div>
										<div class="col-9">
										@item.LicenseNumber
										</div>
									</div>
									<div class="row mb-1">
										<div class="col-3 fw-bold">
											Citizenship Number:
										</div>
										<div class="col-9">
										@item.CitizenshipNumber
										</div>
									</div>
							}

							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Vehicle Name:
								</div>
								<div class="col-9">
									@item.VehicleName
								</div>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Requested Date:
								</div>
								<div class="col-9">
									@item.RequestedDate
								</div>
							</div>
							<div class="row mb-1">
								<div class="d-flex w-full">
									<div class="d-flex w-50">
										<div class="col-6 fw-bold">
											Start Date:
										</div>
										<div class="col-4" style="margin-left:6px;">
											@item.StartDate
										</div>
									</div>
									<div class="d-flex w-50">

										<div class="col-4 fw-bold">
											End Date:
										</div>
										<div class="col-8">
											@item.EndDate
										</div>
									</div>
								</div>
							</div>

							<div class="row mb-3">
								<div class="col-3 fw-bold">
									Total Amount:
								</div>
								<div class="col-9">
									@item.TotalAmount
								</div>
							</div>

							<div class="d-flex w-full justify-content-end">
								<button type="submit" asp-area="Admin" asp-controller="Rental" asp-action="AcceptRent" asp-route-rentalId="@item.Id" type="submit" class="btn btn-green px-4" style="margin-right:10px;">Approve</button>
								<button type="submit" asp-area="Admin" asp-controller="Rental" asp-action="RejectRent" asp-route-rentalId="@item.Id" type="submit" class="btn btn-danger px-4">Reject</button>
							</div>

						</div>
					</div>
				</div>
			</div>
		}
	</form>
</div>

